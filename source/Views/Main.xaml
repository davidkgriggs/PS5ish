                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=ProfilePictureCheckBox, Path=IsChecked}" Value="True">
                                                <Setter Property="Control.Visibility" Value="Visible" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <Grid>
                                    <Border Background="Black" CornerRadius="5" Width="1000" Height="500"/>
                                    <StackPanel Orientation="Vertical" VerticalAlignment="Top" Margin="0,0,0,10">
                                        <TextBlock Text="Cover Scale" FontSize="22" Foreground="White"/>
                                        <TextBlock Text="Small" FontSize="18" Foreground="White"/>
                                        <RadioButton x:Name="ScaleSmall" IsChecked="{DynamicResource ScaleSmall}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="XMBScale" />
                                        <TextBlock Margin="20,0,0,0" Text="Medium" FontSize="18" Foreground="White"/>
                                        <RadioButton x:Name="ScaleMedium" IsChecked="{DynamicResource ScaleMedium}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="XMBScale" />
                                        <TextBlock Margin="20,0,0,0" Text="Large" FontSize="18" Foreground="White"/>
                                        <RadioButton x:Name="ScaleLarge" IsChecked="{DynamicResource ScaleLarge}" Margin="5" HorizontalAlignment="Left" Width="30" Height="30" GroupName="XMBScale" />
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Grid>

                        <!--XMB_Warnings-->
                        <Grid Grid.Row="1">
                            <StackPanel Margin="0,150,0,0" HorizontalAlignment="Center" 
                                        Grid.RowSpan="1" Grid.Row="1" VerticalAlignment="Center" Tag="{DynamicResource SingleRowMode}">
                                <StackPanel.Style>
                                    <Style>
                                        <Setter Property="Control.Visibility" Value="Collapsed" />
                                        <Style.Triggers>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Settings Fullscreen.HorizontalLayout}" Value="True"/>
                                                    <Condition Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="False"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Control.Visibility" Value="Visible" />
                                            </MultiDataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <StackPanel Orientation="Vertical" Width="1200">
                                    <Border Background="{DynamicResource OverlayMenuBackgroundBrush}" CornerRadius="15">
                                        <StackPanel>
                                            <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="72"
                                                       Margin="20" TextWrapping="WrapWithOverflow" TextAlignment="Center"
                                                       Text="For this Theme to work correctly DISABLE Horizontal Scrolling" >
                                                <TextBlock.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="Black" RenderingBias="Quality" Opacity="1"/>
                                                </TextBlock.Effect>
                                            </TextBlock>
                                            <TextBlock Style="{DynamicResource TextBlockBaseStyle}" FontSize="72"
                                                       Margin="20" TextWrapping="WrapWithOverflow" TextAlignment="Center"
                                                       Text="Please go to SETTINGS to DISABLE Horizontal Scrolling" >
                                                <TextBlock.Effect>
                                                    <DropShadowEffect ShadowDepth="2" Color="Black" RenderingBias="Quality" Opacity="1"/>
                                                </TextBlock.Effect>
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                        <!--XMB_Warnings-->

                        <!--AnimatedIntro-->
                        <Grid x:Name="AnimatedIntro" Tag="{DynamicResource Intro}">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=AnimIntroCanvas1, Path=Opacity}" Value="0">
                                            <Setter Property="Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Viewbox Stretch="Fill">
                                <Canvas x:Name="AnimIntroCanvas1" Width="1920" Height="1080" Opacity="0">
                                    <Canvas.Resources>
                                        <Storyboard x:Key="Video">
                                            <DoubleAnimation Storyboard.TargetName="VideoSource2" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0" Duration="0:0:2"/>
                                        </Storyboard>
                                        <Storyboard x:Key="Logo">
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroCanvas1" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:0" Duration="0:0:0.1"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroLogo" Storyboard.TargetProperty="Opacity" From="0" To="1" BeginTime="0:0:1" Duration="0:0:2"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroCanvas1" Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="{DynamicResource IntroTimespan}" Duration="0:0:1"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroCanvas1" Storyboard.TargetProperty="MaxHeight" From="2160" To="2161" BeginTime="{DynamicResource IntroTimespan}" Duration="0:0:0.01"/>
                                        </Storyboard>
                                        <Storyboard x:Key="Border1" RepeatBehavior="30" BeginTime="0:0:1" FillBehavior="Stop">
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder1" Storyboard.TargetProperty="Width" From="100" To="400" Duration="0:0:1.5"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder1" Storyboard.TargetProperty="Height" From="100" To="400" Duration="0:0:1.5"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder1" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1.5"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder1" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:1.5"/>
                                        </Storyboard>
                                        <Storyboard x:Key="Border2" RepeatBehavior="30" BeginTime="0:0:1.5" FillBehavior="Stop">
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder2" Storyboard.TargetProperty="Width" From="100" To="400" Duration="0:0:1.5"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder2" Storyboard.TargetProperty="Height" From="100" To="400" Duration="0:0:1.5"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder2" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:1.5"/>
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroBorder2" Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:1.5"/>
                                        </Storyboard>
                                        <Storyboard x:Key="End">
                                            <DoubleAnimation Storyboard.TargetName="AnimIntroCanvas1" Storyboard.TargetProperty="Height" From="1080" To="1081" BeginTime="{DynamicResource IntroTimespan}" Duration="0:0:2"/>
                                        </Storyboard>
                                    </Canvas.Resources>
                                    <Grid>
                                        <Image Stretch="Fill" Source="{ThemeFile 'Images/PS5Background_All.jpg'}"/>
                                    </Grid>

                                    <Grid>
                                        <TextBlock Name="VideoPath2" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text">
                                                        <Setter.Value>
                                                            <MultiBinding StringFormat="{}{0}{1}">
                                                                <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                                <Binding Source="\ExtraMetadata\Themes\Fullscreen\BackgroundVideo.mp4"/>
                                                            </MultiBinding>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <MediaElement Name="VideoSource2" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                            <MediaElement.Style>
                                                <Style TargetType="MediaElement">
                                                    <Setter Property="MediaElement.Source" Value="{Binding ElementName=VideoPath2, Path=Text}"/>
                                                    <Setter Property="Height" Value="1080"/>
                                                    <Setter Property="Width" Value="1920"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                            <Setter Property="MediaElement.Source" Value="" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </MediaElement.Style>
                                        </MediaElement>
                                    </Grid>
                                    <Grid x:Name="AnimIntroLogo" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1920" Height="1080" Opacity="0">
                                        <Border x:Name="AnimIntroBorder1" BorderThickness="5" BorderBrush="White" CornerRadius="250" Width="0" Height="0" Opacity="0"/>
                                        <Border x:Name="AnimIntroBorder2" BorderThickness="5" BorderBrush="White" CornerRadius="250" Width="0" Height="0" Opacity="0"/>
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image Stretch="UniformToFill" Source="{ThemeFile 'Images/IntroLogo.png'}" Width="80" Height="80"/>
                                        </StackPanel>
                                    </Grid>
                                    <Canvas.Triggers>
                                        <EventTrigger RoutedEvent="Canvas.Loaded">
                                            <!--BeginStoryboard x:Name="Intro1" Storyboard="{StaticResource Video}"/-->
                                            <BeginStoryboard x:Name="Intro2" Storyboard="{StaticResource Logo}"/>
                                            <BeginStoryboard x:Name="Intro3" Storyboard="{StaticResource Border1}"/>
                                            <BeginStoryboard x:Name="Intro4" Storyboard="{StaticResource Border2}"/>
                                            <BeginStoryboard x:Name="Intro5" Storyboard="{StaticResource End}"/>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="Canvas.SizeChanged">
                                            <!--StopStoryboard BeginStoryboardName="Intro1"/-->
                                            <StopStoryboard BeginStoryboardName="Intro2"/>
                                            <StopStoryboard BeginStoryboardName="Intro3"/>
                                            <StopStoryboard BeginStoryboardName="Intro4"/>
                                            <StopStoryboard BeginStoryboardName="Intro5"/>
                                        </EventTrigger>
                                    </Canvas.Triggers>
                                </Canvas>
                            </Viewbox>
                        </Grid>
                        <Grid x:Name="hasIntro" Tag="{DynamicResource Intro}">
                            <Grid.Style>
                                <Style TargetType="Grid">
                                    <Setter Property="Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                            <Setter Property="Opacity" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>

                        <!--VIDEO INTRO-->
                        <Grid x:Name="VideoIntro" Tag="{DynamicResource IntroVideo}">
                            <Grid.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                            <Setter Property="ItemsControl.Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ElementName=IntroVideoSource,Path=Opacity}" Value="0">
                                            <Setter Property="ItemsControl.Visibility" Value="Hidden"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                            <Border Background="Black">
                                <Border.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=VideoIntro,Path=Visibility}" Value="Visible">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" BeginTime="0:0:3" Duration="0:0:0.5"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <TextBlock Name="IntroVideoPath" Tag="{DynamicResource ExtraMetadataPath}" Visibility="Collapsed">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}{1}">
                                                    <Binding RelativeSource="{RelativeSource Self}" Path="Tag" />
                                                    <Binding Source="\ExtraMetadata\Themes\Fullscreen\PS5ish\IntroVideo.mp4"/>
                                                </MultiBinding>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <MediaElement Name="IntroVideoSource" Tag="{DynamicResource UseAbsoluteExtraMetadataPath}">
                                <MediaElement.Style>
                                    <Style TargetType="MediaElement">
                                        <Setter Property="MediaElement.Volume" Value="{DynamicResource IntroVideoVolume}"/>
                                        <Setter Property="MediaElement.Source" Value="{Binding ElementName=IntroVideoPath, Path=Text}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=VideoIntro,Path=Visibility}" Value="Collapsed">
                                                <Setter Property="MediaElement.Source" Value="" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}, Path=IsActive}" Value="False">
                                                <Setter Property="MediaElement.Source" Value="" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ElementName=XMB,Path=MinHeight}" Value="0">
                                                <Setter Property="MediaElement.Source" Value="" />
                                            </DataTrigger>
                                            <EventTrigger RoutedEvent="MediaElement.MediaEnded">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.5" FillBehavior="HoldEnd"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="MaxHeight" From="2160" To="2161" Duration="0:0:0.5"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <DataTrigger Binding="{Binding ElementName=IntroVideoSource,Path=MaxHeight}" Value="2161">
                                                <Setter Property="MediaElement.Source" Value="Stop" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </MediaElement.Style>
                            </MediaElement>
                        </Grid>
                        <Grid x:Name="hasIntroVideo" Tag="{DynamicResource IntroVideo}">
                            <Grid.Style>
                                <Style>
                                    <Setter Property="ItemsControl.Opacity" Value="1"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=Tag}" Value="true">
                                            <Setter Property="ItemsControl.Opacity" Value="0"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Grid.Style>
                        </Grid>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>